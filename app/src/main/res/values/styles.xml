<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorDenied</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:startColor">@color/colorPrimary</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>
